@model Blog.Models.ViewModels.AddBlogPostRequest
@{
    ViewData["Title"] = "Add";
}

<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1>[ADMIN] Adicionar Novo Post</h1>
    </div>
</div>

<div class="container py-5">
    <form method="post">
        <div class="mb-3">
            <label class="form-label">Cabeçalho</label>
            <input type="text" class="form-control" id="heading" asp-for="Heading">
        </div>
        <div class="mb-3">
            <label class="form-label">Título</label>
            <input type="text" class="form-control" id="pageTitle" asp-for="PageTitle">
        </div>
        <div class="mb-3">
            <label class="form-label">Conteúdo</label>
            <textarea class="form-control" id="pageTitle" asp-for="Content"></textarea>
        </div>
        <div class="mb-3">
            <label class="form-label">Descrição Curta</label>
            <input type="text" class="form-control" id="shortDescription" asp-for="ShortDescription">
        </div>
        <div class="mb-3">
            <label class="form-label">Imagem</label>
            <input type="text" class="form-control" id="featuredImageUrl" asp-for="FeaturedImageUrl">
        </div>
        <div class="mb-3">
            <label class="form-label">Slug</label>
            <input type="text" class="form-control" id="slug" asp-for="Slug">
        </div>
        <div class="mb-3">
            <label class="form-label">Data de Publicação</label>
            <input type="date" class="form-control" id="publishedDate" asp-for="PublishedDate">
        </div>
        <div class="mb-3">
            <label class="form-label">Autor</label>
            <input type="text" class="form-control" id="author" asp-for="Author">
        </div>
        <div class="form-check mb-3">
            <input type="checkbox" class="form-check-input" id="visible" asp-for="Visible">
            <label class="form-check-label">Publicado?</label>
        </div>
        <div class="mb-3">
            <label class="form-label">Tags</label>
            <select class="form-select" asp-items="@Model.Tags" asp-for="SelectedTags"></select>
        </div>
        
        
        <div class="mb-3">
            <button type="submit" class="btn btn-dark" id="displayName">Salvar</button>
        </div>
    </form>
</div>