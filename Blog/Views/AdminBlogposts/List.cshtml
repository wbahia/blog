@model List<Blog.Models.Domain.BlogPost>
@{
    ViewData["Title"] = "List";
}

<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1>[ADMIN] Listagem de Posts</h1>
    </div>
</div>

<div class="container py-5">
    @if(Model != null && Model.Any()){
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Cabeçalho</th>
                    <th>Tagss</th>
                    <th>Data de Publicação</th>
                    <th>Visível?</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var post in Model){
                    <tr>
                        <td>
                            @post.Id
                        </td>
                        <td>
                            @post.Heading
                        </td>
                        <td>
                            <div class="d-flex">
                                @foreach (var tag in post.Tags){
                                    <span class="badge bg-secondary me-1">@tag.Name</span>
                                }
                            </div>
                        </td>
                        <td>
                            @post.PublishedDate
                        </td>
                        <td>
                            @post.Visible
                        </td>
                        <td>
                            <a class="btn btn-dark" asp-area="" asp-controller="AdminBlogPosts" asp-action="Edit" asp-route-id="@post.Id">Editar</a>
                        </td>
                        <td>
                            <a class="btn btn-danger ms-2" asp-area="" asp-controller="AdminBlogPosts" asp-action="Delete" asp-route-id="@post.Id">Excluir</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }else{
        <p>Nenhum Post encontrado!</p>
    }
</div>